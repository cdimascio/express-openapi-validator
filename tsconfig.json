{
  "compilerOptions": {
    "declaration": true,
    "target": "es2022",
    "lib": ["es2023"],
    "module": "node16",
    "moduleResolution": "node16",
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "ts-node": {
    "files": true
  },
  "exclude": ["node_modules"],
  "include": ["typings/**/*.d.ts", "src/**/*.ts"]
}
